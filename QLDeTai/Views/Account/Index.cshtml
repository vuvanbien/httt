@model IEnumerable<QLDeTai.Models.ApplicationUser>
@{
    ViewBag.Title = "Quản lý tài khoản";
}

<nav class="navbar navbar-example navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

        <div class="collapse navbar-collapse" id="navbar-ex-2">
            <div class="navbar-nav me-auto">
                <a class="nav-item nav-link " href="/home">Trang chủ</a>
                <a class="nav-item nav-link active" href="/Account">Tài khoản</a>
            </div>

            <span class="navbar-text">@ViewBag.Title</span>
        </div>
    </div>
</nav>


<div class="card">
    <div class="d-flex justify-content-between align-items-center">
        <h5 class="card-header m-0">Danh sách Học viên</h5>
        <a href="/Account/Register" class="btn btn-outline-primary" style="margin-right: 40px;">Thêm mới</a>
    </div>

    <div class=" text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>SĐT</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>@i</td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3 "></i> <strong>@item.UserName</strong></td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3 "></i> <strong>@item.FullName</strong></td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        @*<a class="dropdown-item" href="/GiaoVien/Detail/@item.Id"><i class="bx bx-edit-alt me-1"></i> Chi tiết</a>*@
                                        <a class="dropdown-item" href="/account/edit/@item.UserName"><i class="bx bx-edit-alt me-1"></i> Sửa</a>
                                        <a class="dropdown-item btnDelete" href="#" data-id="@item.UserName"><i class="bx bx-trash me-1 "></i> Xoá</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td>Không có bản ghi nào</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
