@model QLDeTai.Models.EF.TrangThai

@{
    ViewBag.Title = "Thêm mới trạng thái";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav class="navbar navbar-example navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

        <div class="collapse navbar-collapse" id="navbar-ex-2">
            <div class="navbar-nav me-auto">
                <a class="nav-item nav-link " href="/home">Trang chủ</a>
                <a class="nav-item nav-link " href="/TrangThai">Trạng thái</a>
                <a class="nav-item nav-link active" href="#">Thêm mới</a>
            </div>

            <span class="navbar-text">@ViewBag.Title</span>
        </div>
    </div>
</nav>

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Nhập thông tin</h5>
            <small class="text-muted float-end">Vui lòng nhập đầy đủ</small>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Add", "TrangThai", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Tên trạng thái</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                @Html.TextBoxFor(x=>x.TenTrangThai, new { @class = "form-control", @placeholder = "Lần 1" })
                                @Html.ValidationMessageFor(x => x.TenTrangThai, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Mô tả</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-buildings"></i></span>
                                @Html.TextBoxFor(x => x.MoTa, new { @class = "form-control", @placeholder = "...." })
                                @Html.ValidationMessageFor(x => x.MoTa, null, new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
            
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Thêm mới</button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
